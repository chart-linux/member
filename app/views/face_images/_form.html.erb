<%= form_for @face_image, :html => { :class => "form-horizontal face_image" } do |f| %>

  <% if @face_image.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@face_image.errors.count, "error") %> prohibited this face_image from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @face_image.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :image, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :image, :class => 'form-control' %>
    </div>
    <%=f.error_span(:image) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                face_images_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
